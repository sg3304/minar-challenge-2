<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="my_diffdrive_robot">

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry><box size="0.5 0.3 0.1"/></geometry>
      <material><color rgba="0.7 0.7 0.7 1"/></material>
    </visual>
    <collision><geometry><box size="0.5 0.3 0.1"/></geometry></collision>
    <inertial><mass value="5.0"/></inertial>
  </link>

  <!-- Wheels -->
  <xacro:macro name="wheel" params="name x y">
    <link name="${name}">
      <visual>
        <geometry><cylinder length="0.05" radius="0.05"/></geometry>
        <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      </visual>
      <collision><geometry><cylinder length="0.05" radius="0.05"/></geometry></collision>
      <inertial><mass value="0.2"/></inertial>
    </link>
    <joint name="${name}_joint" type="continuous">
      <parent link="base_link"/>
      <child link="${name}"/>
      <origin xyz="${x} ${y} -0.05" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
    </joint>
  </xacro:macro>

  <!-- 4 wheels -->
  <xacro:wheel name="front_left_wheel"  x="0.2"  y="0.15"/>
  <xacro:wheel name="rear_left_wheel"   x="-0.2" y="0.15"/>
  <xacro:wheel name="front_right_wheel" x="0.2"  y="-0.15"/>
  <xacro:wheel name="rear_right_wheel"  x="-0.2" y="-0.15"/>
  <!-- LIDAR link -->
  <link name="taitc_lidar_link">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.03"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material>
        <color rgba="0.0 1.0 0.0 1.0"/> <!-- green lidar -->
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.03"/>
      </geometry>
    </collision>
    <inertial>
    <mass value="5.0"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <inertia ixx="0.1" ixy="0.0" ixz="0.0"
            iyy="0.1" iyz="0.0"
            izz="0.1"/>
    </inertial>

  </link>

  <!-- Fixed joint: base_link -> lidar -->
  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="taitc_lidar_link"/>
    <!-- Position the lidar above the base (example: 0.1m forward, 0m sideways, 0.1m up) -->
    <origin xyz="0.1 0 0.1" rpy="0 0 0"/>
  </joint>

</robot>
